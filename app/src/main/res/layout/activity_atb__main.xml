<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Main_MenuTheme"
    android:background="#424242"
    tools:context="app.webb.aroundtheboard.ATB_MainActivity">

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/separator"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="172dp"
        android:background="#F4511E"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical|center"
        android:onClick="onClickStart"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Start Game"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/level_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/howto_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical|center"
        android:onClick="onClickHowGood"
        android:paddingLeft="47dp"
        android:paddingRight="48dp"
        android:text="How Good am I?"
        android:textAllCaps="false" />

    <View
        android:id="@+id/separator"
        android:layout_width="150dip"
        android:layout_height="1dip"
        android:layout_alignTop="@+id/start_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="#757575" />


    <Button
        android:id="@+id/howto_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/level_btn"
        android:layout_below="@+id/separator"
        android:layout_marginTop="23dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical|center"
        android:onClick="onClickInst"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="Instructions"
        android:textAllCaps="false" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Around The Board"
            android:textColor="#F4511E"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@mipmap/menuimage_foreground" />

</RelativeLayout>
