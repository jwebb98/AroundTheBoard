<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Main_MenuTheme"
    android:background="#424242"
    tools:context="app.webb.aroundtheboard.ATB_MainActivity">

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:background="#F4511E"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical|center"
        android:onClick="onClickStart"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Start Game"
        android:textAllCaps="false"
        android:textSize="48sp" />

    <Button
        android:id="@+id/level_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/start_btn"
        android:layout_below="@+id/start_btn"
        android:layout_marginTop="141dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical|center"
        android:onClick="onClickHowGood"
        android:paddingLeft="47dp"
        android:paddingRight="48dp"
        android:text="How Good am I?"
        android:textAllCaps="false"
        android:textSize="30sp" />


    <Button
        android:id="@+id/howto_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/level_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical|center"
        android:onClick="onClickInst"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="Instructions"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/start_btn"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Around The Board"
            android:textColor="#F4511E"
            android:textSize="72sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
